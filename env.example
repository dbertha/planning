# Configuration base de données PostgreSQL (VPS)
DATABASE_URL=postgresql://ecole:password@postgres:5432/planning
DATABASE_PASSWORD=your_postgres_password_here

# Configuration SMS
SMS_ENABLED=true
SMS_PROVIDER=twilio
# SMS_PROVIDER=spryng
# SMS_PROVIDER=smsfactor

# Configuration Twilio SMS
TWILIO_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_SENDER=your_twilio_phone_number_here

# Configuration Spryng SMS (alternative)
SPRYNG_API_KEY=your_spryng_api_key_here
SMS_SENDER=your_sender_name_or_number

# Configuration SMSFactor SMS (alternative française)
SMS_FACTOR_API_TOKEN=your_smsfactor_token_here
SMS_SENDER=your_sender_name_or_number

# Numéro de test personnel
TEST_PHONE_NUMBER=0032497890341

# Sécurité admin (requis)
ADMIN_SALT=your_secure_random_salt_here
DEFAULT_ADMIN_PASSWORD=admin123

# Configuration serveur
NODE_ENV=production
PORT=3000
CORS_ORIGIN=*

# Configuration domaine et SSL
APP_DOMAIN=votre-domaine.com
APP_EMAIL=admin@votre-domaine.com
ENABLE_SSL=true

# Configuration Docker/VPS
COMPOSE_PROJECT_NAME=ecole-planning